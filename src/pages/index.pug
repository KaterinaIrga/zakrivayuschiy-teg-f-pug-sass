    meta(name="corol-sheme", content="dark light")
    meta(name="author", content="Evlanova Kate")
    link(rel="stylesheet" href="./bundle.css")
    link(rel="icon" href="./svg/favicon.svg" type="image/svg+xml")
  body.page
    header.header 
      div.header__card
        h1.header__title 
          ='</HTML>'
        h2.header__subtitle Закрывающий тег
        nav.theme-menu.header__theme-menu
          <!-- Не меняйте разметку этого списка, иначе скрипты перестанут работать -->
          ul.theme-menu__list
            include ../mixins/theme-menu__item
            each item in menuButton
              +theme-menu__item(item.type, item.theme, item.disabled ,item.title)
    main.main       
      ul.main__card-list       
        include ../mixins/card/card
        each i in cardData
          li.main__card-list-item           
            +card(i.Title, i.ImgSrc, i.ImgAlt ,i.Text, i.Mark)
      dialog.dialog(id='dialog')
        div.dialog__content 
          svg.dialog__icon(viewPort="0 0 28 28" viewBox="0 0 28 28")
            use(href="#floppy")
          h2.dialog__title Вставьте дискету, чтобы продолжить
          button.button.dialog__button(type="button" onclick="window.dialog.close()") ok
    footer.footer 
      button.button.save-button(type="button" onclick="window.dialog.showModal()")           
        svg.save-button__icon(viewPort="0 0 28 28" viewBox="0 0 28 28")
          use(href="#floppy")
        p.save-button__lable Сохранить на память

